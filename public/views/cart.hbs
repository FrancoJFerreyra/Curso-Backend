{{>navbar}}
{{#if cart.length }}
{{#each cart}}
<div>
    <div class="card" style="width: 18rem;">
        <img src="{{img}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <a href="/content/cart">
                <button class="btnRemoveProd btn btn-primary " data-id="{{_id}}">delete</button>
            </a>
            <p class="card-text">${{price}}</p>
        </div>
    </div>
</div>
{{/each}}
<div>
    <a href="/content/cart">
        <button id="buyCart">Comprar</button>
        <button id="emptyCart">Vaciar carrito</button>
    </a>
</div>
{{else}}
    <h1 class="text-danger">Aun no hay productos</h1>
    <script>
    setTimeout(() => {
        location.href = '/content/home'
    }, 2000)
</script> 
{{/if}}

<script src="/socket.io/socket.io.min.js"></script>
<script src="../clients/cartClient.js"></script>